---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Our Services - Appaxon',
  description: 'Discover Appaxon\'s AI-powered proactive product security services designed to protect your applications and data.'
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Appaxon Services"
    title="Comprehensive AI-Powered Product Security"
    subtitle="We provide a suite of proactive security services, leveraging Artificial Intelligence to protect your applications and data at every stage of the development lifecycle."
    actions={[]}
  />

  <!-- Core Security Offerings (Features2 Widget) ************** -->

  <Features2
    title="Our Core Proactive Security Offerings"
    subtitle="Appaxon's AI-driven services are designed to provide deep insights, continuous protection, and intelligent automation for your product security needs."
    columns={2}
    items={[
      {
        title: 'AI-Enhanced Threat Intelligence',
        description:
          'Stay ahead of attackers with AI-curated threat intelligence feeds and predictive analysis tailored to your technology stack and risk profile.',
        icon: 'tabler:radioactive',
      },
      {
        title: 'Continuous Vulnerability Management',
        description:
          'Automated and intelligent scanning for vulnerabilities across your applications, infrastructure, and dependencies, with prioritized remediation guidance powered by AI.',
        icon: 'tabler:shield-scan',
      },
      {
        title: 'Secure SDLC Integration & Automation',
        description:
          'Embed security seamlessly into your DevOps processes with AI-assisted tools for static and dynamic code analysis, security testing, and compliance monitoring.',
        icon: 'tabler:settings-automation',
      },
      {
        title: 'AI Security Co-pilot for Developers',
        description:
          'Empower your development teams with an AI assistant that provides real-time security advice, secure code suggestions, and vulnerability explanations directly within their workflow.',
        icon: 'tabler:robot',
      },
      {
        title: 'AI-Driven Incident Response & Forensics',
        description:
          'Accelerate incident response and digital forensics with AI-powered tools for anomaly detection, automated log analysis, and attack chain reconstruction.',
        icon: 'tabler:emergency-bed',
      },
      {
        title: 'Custom AI Security Model Development',
        description:
          'For unique challenges, we offer services to develop and train custom AI models tailored to your specific product security requirements and data.',
        icon: 'tabler:brain',
      },
    ]}
  />

  <!-- The Appaxon Advantage (Content Widget) **************** -->

  <Content
    items={[
      {
        title: 'Proactive, Not Reactive',
        description:
          'Shift from chasing vulnerabilities to preventing them. Our AI-driven foresight helps you anticipate and mitigate risks before they materialize.',
        icon: 'tabler:shield-cog',
      },
      {
        title: 'Deep Learning Precision',
        description:
          "Appaxon's models are trained on vast, diverse security datasets, enabling unparalleled accuracy and context-awareness in threat detection and analysis.",
        icon: 'tabler:microscope',
      },
      {
        title: 'Scalable & Adaptive Security',
        description:
          'Our platform provides security that grows with your business and dynamically adapts to the ever-evolving threat landscape and your changing needs.',
        icon: 'tabler:zoom-check',
      },
      {
        title: 'Expert Human Oversight',
        description:
          'We combine the power of AI with the irreplaceable insights and expertise of our seasoned cybersecurity professionals to deliver robust security solutions.',
        icon: 'tabler:users-group',
      },
    ]}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">The Appaxon Advantage</h3>
      <p class="text-muted dark:text-slate-400">
        Choosing Appaxon means investing in a future-proof security strategy. We are committed to innovation, excellence, and becoming your trusted partner in proactive product security.
      </p>
    </Fragment>
  </Content>

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Request a Demo',
        href: '#',
        icon: 'tabler:Send',
      },
    ]}
    title="Secure Your Products with Appaxon Today"
    subtitle="Ready to experience the next generation of product security? Contact us for a personalized demo and discover how Appaxon's AI-powered solutions can safeguard your business and foster innovation."
  />
</Layout>
