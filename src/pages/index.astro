---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
// import CallToAction from '~/components/widgets/CallToAction.astro'; // Removed

import Features2 from '~/components/widgets/Features2.astro';
import Features from '~/components/widgets/Features.astro';
// import Stats from '~/components/widgets/Stats.astro'; // Removed
import Features3 from '~/components/widgets/Features3.astro';
import FAQs from '~/components/widgets/FAQs.astro';
// import Brands from '~/components/widgets/Brands.astro'; // Removed
import Content from '~/components/widgets/Content.astro'; // Added for contact info and team text.
import { Terminal } from '../components/Terminal.tsx';
import Team from '~/components/widgets/Team.astro';

// import { YouTube } from 'astro-embed'; // Removed as YouTube component is removed from Hero

const metadata = {
  title: 'Appaxon - Revolutionizing Product Security',
  description: 'AI-powered reasoning that delivers continuous & autonomous threat modeling and red-teaming with actionable remediation.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    actions={[]}
  >
    <Fragment slot="title">
      Revolutionizing Product Security
    </Fragment>

    <Fragment slot="subtitle">
      Autonomous Proactive Product Security
      <br />
      <span class="text-lg md:text-xl font-normal block leading-relaxed mt-4 text-gray-600 dark:text-slate-400">
        AI-powered reasoning that delivers continuous & autonomous threat modeling and red-teaming with actionable remediation
      </span>
    </Fragment>

    <Fragment slot="image">
      <Terminal client:load />
    </Fragment>
  </Hero>

  <!-- CURRENT STATE OF PROD SEC (Features2 Widget) ************** -->
  <Features2
    title="CURRENT STATE OF PROD SEC"
    items={[
      {
        title: 'THEORETICAL SCANS & ANALYSIS',
        description:
          'Most security tools perform theoretical scans or attack path analyses, without demonstrating how that leads to actual exploitation.',
        icon: 'tabler:zoom-question', // Example icon
      },
      {
        title: 'POST-BREACH REACTIONS',
        description:
          'Current solutions react only after breaches, missing proactive exploitation capability.',
        icon: 'tabler:firetruck', // Example icon
      },
      {
        title: 'MANUAL PENTESTING -OR- RULES-BASED APPROACHES',
        description:
          'Slow (4-6 weeks), expensive, not continuous, not integrated with dev workflow, and lacks remediation guidance.',
        icon: 'tabler:manual-gearbox', // Example icon
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- THE APPAXON DIFFERENCE (Features2 Widget) ************** -->
  <Features2
    title="THE APPAXON DIFFERENCE"
    items={[
      {
        title: 'PROACTIVE (NOT REACTIVE)',
        description:
          'Going beyond post-breach detection and response with continuous threat modeling & red-teaming.',
        icon: 'tabler:shield-up', // Example icon
      },
      {
        title: 'VERIFIABLE EXPLOITATION EVIDENCE',
        description:
          'Reducing guesswork, alert fatigue, and false positives with real-world security testing and exploitation.',
        icon: 'tabler:check', // Example icon
      },
      {
        title: 'AUTONOMOUS & AGENTIC (REASONING-BASED)',
        description:
          'Leverages the reasoning power of AI to deliver product security autonomously, at agentic speed and scale.',
        icon: 'tabler:brain', // Example icon
      },
    ]}
  />

  <!-- KEY DIFFERENTIATORS (Features Widget) *************** -->
  <Features
    id="differentiators"
    title="KEY DIFFERENTIATORS"
    columns={2} // Adjusted to 2 columns for 4 items for better layout
    items={[
      {
        title: 'Proactive',
        description:
          'Identifies issues proactively, through exploitation, rather than wait for post-breach detection and response.',
        icon: 'tabler:search', // Example icon
      },
      {
        title: 'Context Graph',
        description:
          "Creates a 'threat context graph' from generic as well as org-specific data sources, to make product security decisions.",
        icon: 'tabler:graph', // Example icon
      },
      {
        title: 'Actionable',
        description:
          'Delivers clear threat models and specific remediation recommendations for immediate implementation.',
        icon: 'tabler:file-check', // Example icon
      },
      {
        title: 'Continuous',
        description:
          'Provides continuous security improvement across threat modeling, pull-request reviews, and control validation.',
        icon: 'tabler:refresh-dot', // Example icon
      },
    ]}
  />

  <!-- PRODUCT SECURITY FLYWHEEL (Features2 Widget) ************** -->
  <Features2
    title="PRODUCT SECURITY FLYWHEEL"
    subtitle="Our process for continuous improvement."
    items={[
      {
        title: '1. Identify Issues',
        description:
          'Uncover vulnerabilities with autonomous red-teaming and threat modeling.',
        icon: 'tabler:target-arrow', // Example icon
      },
      {
        title: '2. Provide Remediation',
        description:
          'Clear, actionable recommendations for resolving security issues.',
        icon: 'tabler:settings-cog', // Example icon
      },
      {
        title: '3. Promote Alignment',
        description:
          'Foster Dev-Sec collaboration through shared evidence and priorities.',
        icon: 'tabler:users-group', // Example icon
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- USE CASES (Features2 Widget) ************** -->
  <Features2
    id="usecases"
    title="USE CASES"
    columns={4}
    items={[
      {
        title: 'Continuous Product Threat Modeling',
        description:
          'Based on contextual inputs, including documentation, Q&A, and transcripts, continuously refined via exploitation feedback.',
        icon: 'tabler:binary-tree-2', // Example icon
      },
      {
        title: 'LLM/AI Application Red-teaming',
        description:
          'Uncovers risks in AI-native systems like prompt injection and data leakage, going beyond traditional tooling that cannot test these edge cases.',
        icon: 'tabler:robot', // Example icon
      },
      {
        title: 'Compensating Controls Testing',
        description:
          'Probes production controls (identity, WAF) for real-world effectiveness and verifies alignment with threat model remediation steps.',
        icon: 'tabler:shield-cog', // Example icon
      },
      {
        title: 'AppSec Tool Output Validation',
        description:
          'Works standalone or integrates with AppSec tools to validate real exploitability, prioritizing issues and reducing noise.',
        icon: 'tabler:filter-check', // Example icon
      },
    ]}
  />

  <!-- MEET THE TEAM -->
  <Team
    id="team"
    title="MEET THE TEAM"
    team={[
      {
        name: 'Chiradeep Vittal',
        job: 'CTO & Co-Founder',
        image: {
          src: '/assets/images/chiradeep-vittal.png',
          alt: 'Chiradeep Vittal',
        },
      },
      {
        name: 'Pratik Roychowdhury',
        job: 'CEO & Co-Founder',
        image: {
          src: '/assets/images/pratik-roychowdhury.png',
          alt: 'Pratik Roychowdhury',
        },
      },
    ]}
  >
    <Fragment slot="footer">
      <div class="text-center">
        <p class="text-lg text-gray-700 dark:text-slate-300 mb-4">
          Team of repeat entrepreneurs, security practitioners, and experts in product security (application / API, network,
          and Cloud), DevSecOps, and AI/ML.
        </p>
        <a href="/about" class="btn btn-primary">Learn more about us</a>
      </div>
    </Fragment>
  </Team>

  <!-- Contact Information (Content Widget) -->
  <Content
    title="Get in Touch"
  >
    <Fragment slot="content">
      <div class="text-center">
        <p><strong>Headquarters:</strong> Menlo Park, CA</p>
        <p><strong>Phone:</strong> (408) 412 - 0964</p>
        <p><strong>Email:</strong> prodsec [at] appaxon.ai</p>
      </div>
    </Fragment>
  </Content>

</Layout> 
</Layout> 