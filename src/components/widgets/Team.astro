---
import type { Team as Props } from '~/types';
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  team = [],
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} classes={classes?.headline as Record<string, string>} />
  <div class="flex justify-center">
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-8 lg:gap-12 text-center">
      {
        team.map((member) => (
          <div class="p-4">
            {member.image && (
              <img
                src={member.image.src}
                alt={member.image.alt || member.name}
                class="rounded-full w-40 h-40 object-cover mx-auto mb-4"
                width={160}
                height={160}
                loading="lazy"
                decoding="async"
              />
            )}
            <h3 class="text-xl font-bold">{member.name}</h3>
            <p class="text-gray-500 dark:text-slate-400">{member.job}</p>
          </div>
        ))
      }
    </div>
  </div>
  <Fragment set:html={Astro.slots.render('footer')} />
</WidgetWrapper> 